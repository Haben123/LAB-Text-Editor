#/bin/bash

yum install python-pip
pip install virtualenv        
pip install --upgrade pip     
mkdir /opt/django             
cd /opt/django                 
yum install epel-release
yum install python34 python-pip
virtualenv -p python3 django   
cd django
source bin/activate            
python --version              
pip install django            
django-admin --version        
django-admin startproject project1  
chown -R habenhaftu django   
exit 

myip=$( curl https://api.ipify.org )
sed -i "s/ALLOWED_HOSTS = \[\]/ALLOWED_HOSTS = \['"$myip"'\]/g" /opt/django/project1/project1/settings.py


su - habenhaftu
source /opt/django/django/bin/activate    

/opt/django/project1/manage.py runserver 0.0.0.0:8000&  
yum install git



